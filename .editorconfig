# EditorConfig helps maintain consistent coding styles across different editors
# For more information, visit: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 72
